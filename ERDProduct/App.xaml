<Application x:Class="ERDProduct.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ERDProduct"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="BtnStyleSTD">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="16pt"/>
            <Setter Property="Background" Value="#FFFFFFE1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0, 0, 0, 4"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource BtnStyleSTD}" x:Key="BtnStyleDanger">
            <Setter Property="Background" Value="#FFFF9C1A"/>
            <Setter Property="FontWeight" Value="Heavy"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>

    </Application.Resources>
</Application>
